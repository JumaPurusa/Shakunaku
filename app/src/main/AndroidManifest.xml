<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jay.shakunaku">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.RegistrationActivity" />
        <activity android:name=".ContainerActivity" />
        <activity
            android:name=".Profile.SettingsActivity"
            android:parentActivityName=".ContainerActivity" />
        <activity
            android:name=".Profile.EditProfileActivity"
            android:parentActivityName=".Profile.SettingsActivity" />
        <activity android:name=".Activities.InitialAccountSettings" />
        <activity android:name=".Timeline_Posting.GalleryActivity" />
        <activity android:name=".Timeline_Posting.ShareActivity" />
        <activity android:name=".Profile.ImageCropperActivity" />
        <activity android:name=".PostAcvitity" />
        <activity android:name=".Comments.CommentsActivity" />
        <activity android:name=".Timeline_Homepage.SearchActivity" />
        <activity android:name=".Timeline_Homepage.ViewProfileActivity"></activity>
    </application>

</manifest>