<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
                <RelativeLayout
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/rellayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/shaku_image"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/tongue"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/text1"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/shaku_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Are you sure you want to"/>

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/text2"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/text1"
                        android:layout_toRightOf="@+id/shaku_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="logout of ShakuNaku?"/>


                </RelativeLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/rellayout1"
                    android:orientation="horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cancel_custom_btn"
                        android:text="CANCEL"
                        android:gravity="center"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/confirm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/confirm_custom_btn"
                        android:text="CONFIRM"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"/>

                </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>